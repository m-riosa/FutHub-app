<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FutHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#912F02</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Dark mode -->

    <style name = "SCREEN">
        <item name="android:background">#050505</item>
    </style>

    <style name = "TEXT">
        <item name="android:textColor">#E1E0E0</item>
    </style>

    <!-- button background in dark mode-->
    <style name="BUTTON">
        <item name="android:background">#7A5124</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Matchbox">
        <item name="android:background">#595858</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>